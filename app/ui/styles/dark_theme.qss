/* Dark Theme for Collimator Design Tool
   Reference: FRD §6 — UI/UX Design
   Colors defined in colors.py */

/* ── Global ── */
QMainWindow {
    background-color: #0F172A;
    color: #F8FAFC;
}

QWidget {
    background-color: #0F172A;
    color: #F8FAFC;
    font-family: "Segoe UI", "Roboto", sans-serif;
    font-size: 10pt;
}

/* ── Dock Widgets (Side Panels) ── */
QDockWidget {
    background-color: #1E293B;
    color: #F8FAFC;
    titlebar-close-icon: none;
    border: 1px solid #475569;
}

QDockWidget::title {
    background-color: #334155;
    padding: 6px 10px;
    font-weight: bold;
    border-bottom: 2px solid #3B82F6;
}

QDockWidget QWidget {
    background-color: #1E293B;
}

/* ── Push Buttons ── */
QPushButton {
    background-color: #334155;
    color: #F8FAFC;
    border: 1px solid #475569;
    border-radius: 4px;
    padding: 6px 16px;
}

QPushButton:hover {
    background-color: #3B82F6;
    border-color: #60A5FA;
}

QPushButton:pressed {
    background-color: #2563EB;
}

QPushButton:disabled {
    background-color: #1E293B;
    color: #64748B;
    border-color: #334155;
}

/* ── Primary Action Button ── */
QPushButton[cssClass="primary"] {
    background-color: #3B82F6;
    border-color: #60A5FA;
    font-weight: bold;
}

QPushButton[cssClass="primary"]:hover {
    background-color: #60A5FA;
}

QPushButton[cssClass="primary"]:pressed {
    background-color: #2563EB;
}

/* ── Small Buttons (panels) ── */
QPushButton[cssClass="small"] {
    background-color: #334155;
    color: #F8FAFC;
    border: 1px solid #475569;
    border-radius: 3px;
    font-size: 8pt;
    padding: 2px 8px;
}

QPushButton[cssClass="small"]:hover {
    background-color: #475569;
    border-color: #3B82F6;
}

QPushButton[cssClass="small"]:pressed {
    background-color: #1E293B;
}

QPushButton[cssClass="small"]:disabled {
    background-color: #1E293B;
    color: #64748B;
    border-color: #334155;
}

QPushButton[cssClass="small-danger"] {
    background-color: #334155;
    color: #EF4444;
    border: 1px solid #475569;
    border-radius: 3px;
    font-size: 8pt;
    padding: 2px 8px;
}

QPushButton[cssClass="small-danger"]:hover {
    background-color: #475569;
    border-color: #EF4444;
}

QPushButton[cssClass="small-danger"]:pressed {
    background-color: #1E293B;
}

/* Small square icon buttons (stage +/-/▲/▼) */
QPushButton[cssClass="small-icon"] {
    background-color: #334155;
    color: #F8FAFC;
    border: 1px solid #475569;
    border-radius: 3px;
    font-size: 9pt;
    font-weight: bold;
    padding: 0px;
}

QPushButton[cssClass="small-icon"]:hover {
    background-color: #475569;
    border-color: #3B82F6;
}

QPushButton[cssClass="small-icon"]:pressed {
    background-color: #1E293B;
}

QPushButton[cssClass="small-icon"]:disabled {
    color: #64748B;
    background-color: #1E293B;
    border-color: #334155;
}

/* Composite K toggle */
QPushButton[cssClass="composite-toggle"] {
    color: #94A3B8;
    background-color: transparent;
    border: 1px solid #475569;
    border-radius: 3px;
    font-size: 7pt;
    font-weight: bold;
    padding: 0px;
}

QPushButton[cssClass="composite-toggle"]:hover {
    border-color: #F59E0B;
    color: #F59E0B;
}

QPushButton[cssClass="composite-toggle"]:checked {
    color: #F59E0B;
    background-color: #422006;
    border-color: #F59E0B;
}

/* Inline delete (×) button */
QPushButton[cssClass="inline-delete"] {
    color: #EF4444;
    background-color: transparent;
    border: none;
    font-size: 9pt;
    padding: 0px;
}

QPushButton[cssClass="inline-delete"]:hover {
    background-color: #374151;
    border-radius: 3px;
}

/* Section header (collapsible) */
QPushButton[cssClass="section-header"] {
    background-color: #1E293B;
    border: none;
    border-bottom: 1px solid #334155;
    color: #F8FAFC;
    font-weight: bold;
    font-size: 9pt;
    text-align: left;
    padding: 6px 8px;
}

QPushButton[cssClass="section-header"]:hover {
    background-color: #334155;
}

/* ── Tab Widget ── */
QTabWidget::pane {
    background-color: #1E293B;
    border: 1px solid #475569;
    border-top: 2px solid #3B82F6;
}

QTabBar::tab {
    background-color: #334155;
    color: #94A3B8;
    padding: 8px 20px;
    border: 1px solid #475569;
    border-bottom: none;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    margin-right: 2px;
}

QTabBar::tab:selected {
    background-color: #1E293B;
    color: #F8FAFC;
    border-bottom: 2px solid #3B82F6;
}

QTabBar::tab:hover:!selected {
    background-color: #475569;
    color: #F8FAFC;
}

/* ── Toolbar ── */
QToolBar {
    background-color: #1E293B;
    border-bottom: 1px solid #475569;
    padding: 4px 8px;
    spacing: 8px;
}

QToolBar QToolButton {
    background-color: transparent;
    color: #F8FAFC;
    border: 1px solid transparent;
    border-radius: 4px;
    padding: 4px 12px;
    min-height: 28px;
}

QToolBar QToolButton:hover {
    background-color: #334155;
    border-color: #475569;
}

QToolBar QToolButton:pressed {
    background-color: #3B82F6;
}

QToolBar QToolButton:checked {
    background-color: #1D4ED8;
    border: 1px solid #3B82F6;
    color: #FFFFFF;
}

/* ── Line Edit ── */
QLineEdit {
    background-color: #334155;
    color: #F8FAFC;
    border: 1px solid #475569;
    border-radius: 4px;
    padding: 4px 8px;
    min-height: 24px;
    selection-background-color: #3B82F6;
}

QLineEdit:focus {
    border-color: #3B82F6;
}

QLineEdit:disabled {
    background-color: #1E293B;
    color: #64748B;
}

/* ── Combo Box ── */
QComboBox {
    background-color: #334155;
    color: #F8FAFC;
    border: 1px solid #475569;
    border-radius: 4px;
    padding: 4px 8px;
    min-height: 24px;
}

QComboBox:hover {
    border-color: #3B82F6;
}

QComboBox::drop-down {
    border: none;
    width: 24px;
}

QComboBox QAbstractItemView {
    background-color: #334155;
    color: #F8FAFC;
    border: 1px solid #475569;
    selection-background-color: #3B82F6;
}

/* ── Slider ── */
QSlider::groove:horizontal {
    background-color: #334155;
    height: 6px;
    border-radius: 3px;
}

QSlider::handle:horizontal {
    background-color: #3B82F6;
    width: 16px;
    height: 16px;
    margin: -5px 0;
    border-radius: 8px;
}

QSlider::handle:horizontal:hover {
    background-color: #60A5FA;
}

/* ── Group Box ── */
QGroupBox {
    background-color: #1E293B;
    border: 1px solid #475569;
    border-radius: 4px;
    margin-top: 12px;
    padding-top: 16px;
    font-weight: bold;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 2px 8px;
    color: #94A3B8;
}

/* ── Scroll Area / Scroll Bar ── */
QScrollArea {
    background-color: #1E293B;
    border: none;
}

QScrollBar:vertical {
    background-color: #1E293B;
    width: 10px;
    margin: 0;
}

QScrollBar::handle:vertical {
    background-color: #475569;
    border-radius: 5px;
    min-height: 30px;
}

QScrollBar::handle:vertical:hover {
    background-color: #64748B;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0;
}

QScrollBar:horizontal {
    background-color: #1E293B;
    height: 10px;
    margin: 0;
}

QScrollBar::handle:horizontal {
    background-color: #475569;
    border-radius: 5px;
    min-width: 30px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #64748B;
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    width: 0;
}

/* ── Splitter ── */
QSplitter::handle {
    background-color: #475569;
}

QSplitter::handle:horizontal {
    width: 2px;
}

QSplitter::handle:vertical {
    height: 2px;
}

QSplitter::handle:hover {
    background-color: #3B82F6;
}

/* ── Status Bar ── */
QStatusBar {
    background-color: #1E293B;
    color: #94A3B8;
    border-top: 1px solid #475569;
    padding: 2px 8px;
}

QStatusBar QLabel {
    color: #94A3B8;
    padding: 0 4px;
}

/* ── Tooltip ── */
QToolTip {
    background-color: #334155;
    color: #F8FAFC;
    border: 1px solid #475569;
    padding: 4px 8px;
    border-radius: 4px;
}

/* ── Label ── */
QLabel {
    color: #F8FAFC;
    background-color: transparent;
}

QLabel[cssClass="secondary"] {
    color: #94A3B8;
}

QLabel[cssClass="heading"] {
    font-size: 12pt;
    font-weight: bold;
}

QLabel[cssClass="prop-label"] {
    color: #94A3B8;
    font-size: 8pt;
    background-color: transparent;
}

/* ── Property Frame ── */
QFrame[cssClass="prop-frame"] {
    background-color: #1E293B;
    border-radius: 4px;
}

/* ── List Widget (small font) ── */
QListWidget[cssClass="small-list"] {
    font-size: 8pt;
}

/* ── Small Combo Box ── */
QComboBox[cssClass="small-combo"] {
    font-size: 8pt;
}

/* ── Spin Box ── */
QSpinBox, QDoubleSpinBox {
    background-color: #334155;
    color: #F8FAFC;
    border: 1px solid #475569;
    border-radius: 4px;
    padding: 4px 8px;
    min-height: 24px;
}

QSpinBox:focus, QDoubleSpinBox:focus {
    border-color: #3B82F6;
}

/* ── Check Box ── */
QCheckBox {
    color: #F8FAFC;
    spacing: 8px;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    border: 1px solid #475569;
    border-radius: 3px;
    background-color: #334155;
}

QCheckBox::indicator:checked {
    background-color: #3B82F6;
    border-color: #3B82F6;
}

/* ── Menu ── */
QMenuBar {
    background-color: #1E293B;
    color: #F8FAFC;
    border-bottom: 1px solid #475569;
}

QMenuBar::item:selected {
    background-color: #334155;
}

QMenu {
    background-color: #334155;
    color: #F8FAFC;
    border: 1px solid #475569;
}

QMenu::item:selected {
    background-color: #3B82F6;
}

QMenu::separator {
    height: 1px;
    background-color: #475569;
    margin: 4px 8px;
}
